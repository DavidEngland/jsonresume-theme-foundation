{{#if resume.references.length}}
    <div id="references">
        <h2>References</h2>
        {{#each resume.references}}
            <div class="row">
                <div class="item">
                    {{#if reference}}
                        <blockquote class="reference">
                            {{reference}}
                        </blockquote>
                    {{/if}}
                    {{#if name}}
                        <cite>{{name}}</cite>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}
