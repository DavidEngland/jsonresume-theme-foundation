{{#if resume.work.length}}
    <div id="work">
        <h2>Work Experience</h2>
        {{#each resume.work}}
            <div class="callout-card radius primary">
                <div class="callout-card-content">
                    {{#if position}}
                        <div class="small-12 medium-6 large-5 columns">
                            <span class="position">{{position}}</span>
                        </div>
                    {{else}}
                        <div class="small-12 medium-4 large-4 columns"></div>
                    {{/if}}
                    {{#if company}}
                        <div class="small-12 medium-6 large-5 large-centered columns">
                            <p>
                                {{#if website}}
                                    <a href="{{website}}" target="_blank">{{company}}</a>
                                {{else}}
                                    {{company}}
                                {{/if}}
                            </p>
                        </div>
                    {{else}}
                        <div class="small-12 medium-4 large-4 columns"></div>
                    {{/if}}
                    <div class="small-12 medium-6 large-2 columns">
                        <p class="dates">
                            {{#if startDate}}
                                <span class="startDate">{{prettifyDate startDate}}</span>
                            {{/if}}
                            {{#if endDate}}
                                <span class="endDate">&ndash;{{prettifyDate endDate}}</span>
                            {{else}}
                                <span class="endDate">&ndash;Present</span>
                            {{/if}}
                        </p>
                    </div>
                    {{#if summary}}
                        <div class="row">
                            <div class="large-12 columns">
                                <p class="summary">{{summary}}</p>
                            </div>
                        </div>
                    {{/if}}
                    {{#if highlights.length}}
                        <ul class="highlights">
                            {{#each highlights}}
                                <li>
                                    {{#markdown}}{{.}}{{/markdown}}
                                </li>
                            {{/each}}
                        </ul>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}
